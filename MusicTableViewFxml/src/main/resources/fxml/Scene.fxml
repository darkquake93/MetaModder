<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.*?>

<GridPane alignment="CENTER" hgap="10.0" vgap="10.0" prefWidth="750"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="ku.piii.musictableviewfxml.FXMLController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding> 
    <Label style="-fx-font: NORMAL 20 Tahoma;" text="Music Collection"                
           GridPane.columnIndex="0" GridPane.rowIndex="1" fx:id="addressBook">
    </Label>
    <Label GridPane.rowIndex="2" text="Selected Library Location " fx:id="label" />
    <TextField GridPane.rowIndex="3" fx:id="selectedfolder" editable="false" />

    <FlowPane xmlns:fx="http://javafx.com/fxml" GridPane.rowIndex="4" GridPane.columnIndex="0">
        <ComboBox fx:id="selectMeta" editable="false" layoutX="14.0" layoutY="22.0" >
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding> 
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Title" />
                    <String fx:value="Year" />
                    <String fx:value="Genre" />
                </FXCollections>
            </items>
            <value>
                <String fx:value="Select Attribute.." />
            </value>
        </ComboBox>
        <Label text="     " />
        <TextField fx:id="setTo" text="Set this to..">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding> 
        </TextField>
        <Label text="     " />
        <Button fx:id="setitem" text="Set Selected" onAction="#SetMeta" >
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding> 
        </Button>
    </FlowPane>

    <TableView fx:id="tableView" 
               GridPane.rowIndex="5"
               GridPane.columnIndex="0" 
               GridPane.columnSpan="1" 
               GridPane.hgrow="ALWAYS" 
               GridPane.vgrow="ALWAYS"        
    >
    </TableView>
  
    <MenuBar fx:id="menuBar">
        <menus>
            <Menu text="File">
                <items>
                    <MenuItem text="Open Private" onAction="#handleFileOpenPrivate" accelerator="Shortcut+O"/>
                    <MenuItem text="Open Public" onAction="#handleFileOpenPublic" accelerator="Shortcut+P"/>
                    <SeparatorMenuItem  />
                    <MenuItem text="Exit" onAction="#ExitApp"/>
                </items>
            </Menu>
            <Menu text="Edit">
                <items>
                    <MenuItem text="Copy"/>
                    <MenuItem text="Cut"/>
                    <MenuItem text="Paste"/>
                    <MenuItem text="Copy to folder" onAction="#CopyTo"/>
                </items>
            </Menu>
            <Menu text="Help">
                <items>
                    <MenuItem text="Greyed out item" disable="true"/>
                    <MenuItem text="Online Manual" visible="false"/>
                    <SeparatorMenuItem />
                    <MenuItem text="About" onAction="#handleAboutAction"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>

</GridPane>